generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model audio {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  data   String
  User   User?   @relation(fields: [userId], references: [id])
  userId String? @db.ObjectId
}

model User {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  email  String  @unique
  name   String?
  audios audio[]
}
